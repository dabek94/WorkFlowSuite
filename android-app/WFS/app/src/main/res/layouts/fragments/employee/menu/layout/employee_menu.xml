<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="me.bdabrowski.wfs.service.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wfs_background_light">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/profile_picture"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_employer_foreground"
                android:onClick="profileView"></ImageButton>

            <TextView
                android:id="@+id/header_userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{@string/profile_user_name(user.firstName, user.lastName)}"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>

        <fragment
            android:id="@+id/menu_body_nav"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:navGraph="@navigation/nav_employee"

            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/employee_menu_bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/employee_menu_bottom_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemBackground="@color/cardview_light_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/employee_menu_navigation" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>