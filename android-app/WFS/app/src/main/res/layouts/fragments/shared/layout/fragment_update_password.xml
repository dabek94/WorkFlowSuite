<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_light_vertical">

    <EditText
        android:id="@+id/editText_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:hint="@string/hint_new_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_update_password_reenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/hint_reenter_new_password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editText_update_password"
        app:layout_constraintStart_toStartOf="@+id/editText_update_password"
        app:layout_constraintTop_toBottomOf="@+id/editText_update_password" />

    <Button
        android:id="@+id/button_action_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:background="@drawable/btn_default"
        android:text="@string/update_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editText_update_password"
        app:layout_constraintStart_toStartOf="@+id/editText_update_password"
        app:layout_constraintTop_toBottomOf="@+id/editText_update_password" />

</androidx.constraintlayout.widget.ConstraintLayout>